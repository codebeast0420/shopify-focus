<!-- /templates/snippets/section-slider-collection-banner.liquid -->

<div class="section-slider no-margin space-20 space-top-{{ settings.margin-top-section }}">
  <div
    class="slider-owl owl-carousel"
    data-items="1"
    data-carousel="owl"
    data-pagination="true"
    data-nav="true"
    data-autoplaytimeout="{{ settings.slide_carousel_interval }}"
  >
    {% capture _enable %}slide_carousel_3_enable{% endcapture %}
    {% capture _image %}slide_carousel_3_image.jpg{% endcapture %}
    {% capture _header %}slide_carousel_3_header{% endcapture %}
    {% capture _subheader %}slide_carousel_3_subheader{% endcapture %}
    {% capture _year %}slide_carousel_3_year{% endcapture %}
    {% capture _button %}slide_carousel_3_button{% endcapture %}
    {% capture _link %}slide_carousel_3_link{% endcapture %}
    {% capture _style %}slide_carousel_3_style{% endcapture %}

    {% assign enable = settings[_enable] %}
    {% assign slider_link = settings[_link] %}

    {% if enable %}
      <div class="slider-content {{ settings[_style] }}" data-link="{{ slider_link }}">
        <div class="slider-home slide-fullwidth">
          <img src="{{ _image | asset_url }}" alt="">
          <div class="wrapper-content">
            <div class="caption-wrapper">
              <div class="wrapper">
                <div class="slider-caption caption ads-section">
                  {% if settings[_year] != blank %}
                    <p class="year">{{ settings[_year] }}</p>
                  {% endif %}
                  <div class="fashion-trends">
                    {% if settings[_header] != blank %}
                      <h1 class="sub-header">Winter</h1>
                      <h1>{{ settings[_header] }}</h1>
                    {% endif %}
                  </div>
                </div>
                {% if settings[_button] != blank %}
                  <div style="padding:0 70px;">
                    <a class="btn-border" href="{{ settings[_link] }}"
                      ><i class="fa text-theme fa-long-arrow-right"></i>{{ settings[_button] -}}
                    </a>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>
