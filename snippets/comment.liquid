<!-- /snippets/comment.liquid -->
{% comment %}

  This snippet generates the structure of a comment.
  It is used to show not only recent comments, but also comments that were
  just published but not yet approved.

  More information:
   - http://docs.shopify.com/themes/liquid-variables/comment

{% endcomment %}

<div class="comment">
  <div class="rte">
    <p class="info-comment">
      {% capture author %}<span class="author">{{ comment.author }}</span>{% endcapture %}
      {% capture date %}<em><time datetime="{{ comment.created_at | date: '%Y-%m-%d' }}">{{ comment.created_at | date: format: 'month_day_year' }}</time></em>{% endcapture %}
      {{ 'blogs.article.comment_meta_html' | t: author: author, date: date }}
    </p>
    <div class="content-inner">
      {{ comment.content }}
    </div>
  </div>

</div>
