<!-- /templates/snippets/section-blog.liquid -->

<div class="widget latest-posts  space-top-{{ settings.margin-top-section }} no-margin space-{{ settings.margin-bottom-section }}">
	<div class="p-relative">
		
		<div class="heading-title style1 clearfix">
			<h3 class="title"><span>{{settings.blog_title}}</span></h3>
		</div>

		<div class="blog-carousel owl-carousel" data-items="{{ settings.blog_number_column }}" data-carousel="owl" data-pagination="false" data-nav="false">
			{% for article in blogs.news.articles limit: settings.blog_number_item %}

				<div class="latest-posts-body">
					<div class="p-relative">
						{% if article.image %}
						<div class="latest-posts-image">
							<a href="{{ article.url }}" title="">
								<img src="{{ article.image.src | img_url: 'original' }}" alt="" class="img-responsive">
							</a>
						</div>
						{% endif %}
						<div class="info-absolute">

							<div class="description">
								<p class="shortinfo">{{ article.content | strip_html | truncatewords: 40 }} </p>
								<div class="read-more">
									<a class="btn btn-outline btn-primary product-add-cart" href="{{ article.url }}">{{ settings.blog_read_more_text }}</a>
								</div>
							</div>

							<div class="posts-title">

								<h4 class="entry-title">
									<a href="{{ article.url }}" title="{{ article.title }}">{{ article.title }}</a>
								</h4>
								<span class="time">{{article.published_at | date: " %d" }} / {{article.published_at | date: "%B" }} / {{article.published_at | date: " %Y" }}</span>
							</div>

						</div>
					</div>
					<div class="latest-posts-meta">
						
						<div class="latest-posts-profile">
							
							{% capture author %}<span>{{ article.author }}</span>{% endcapture %}
            				<span class="entry-meta-author"><i class="fa fa-user"></i>{{ author }}</span>

			                <span class="entry-meta-comment">
			                  <a href="{{ article.url }}#comments">
			                    <i class="fa fa-comments"></i>
			                    {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
			                  </a>
			                </span>
						</div>
					</div>

				</div>
			{% endfor %}
		</div>
	</div>
</div>